        } else {
            $src .= "?product_id=" . $product_id . "&priority=extra&task=edit_template&template_folder=" . $_GET['template_folder'] . "";
            $title_btn = __("Edit Template");
        }
    } elseif (isset($_GET['task']) && $_GET['task'] == "redesign") {
